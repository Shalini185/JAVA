package placment;

public class balance {
	public static void main(String[] args) {
		String a="(()()())";
		int balance =0;
		for(int i=0; i<a.length();i++) {
		    char ch=a.charAt(i);
		    if(ch=='(') {
		    	balance++;
		    }
		    else if (ch==')') {
			balance--;
		}if(balance<0) {
			System.out.println("Is the string is valid? False");
		}else if(balance==0) {
			System.out.println("Is the string is valid?  True");
		}
	}
}
}
